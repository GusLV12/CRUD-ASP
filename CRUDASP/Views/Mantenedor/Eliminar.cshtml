@model ContactoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Eliminar Contacto</h5>
    <div class="card-body">


        <div class="alert alert-danger" role="alert">
            ¡Se eliminará el contacto: @Html.DisplayTextFor(m => m.Nombre)!
        </div>

        <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">
            <input type="hidden" asp-for="idContacto" class="form-control" placeholder="Ingresa Nombre">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

